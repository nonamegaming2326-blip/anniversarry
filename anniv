  <script>
    const eventTitle = 'Happy Anniversary';
    const coupleName = 'Taufiq & Amelia';
    const heroMessage = 'Selamat merayakan cinta abadi pada hari istimewa ini üíï';
    const targetDate = '2025-10-28T00:00:00';
    const venue = 'Rumah & Online';

    document.getElementById('title').textContent = eventTitle + ' ‚Äî ' + coupleName;
    document.getElementById('subtitle').textContent = heroMessage;

    function updateCountdown(){
      const now = new Date();
      const tgt = new Date(targetDate);
      let diff = Math.max(0, Math.floor((tgt - now)/1000));
      const days = Math.floor(diff/86400); diff %= 86400;
      const hours = Math.floor(diff/3600); diff %= 3600;
      const minutes = Math.floor(diff/60); const seconds = diff%60;
      document.getElementById('days').textContent = String(days);
      document.getElementById('hours').textContent = String(hours).padStart(2,'0');
      document.getElementById('minutes').textContent = String(minutes).padStart(2,'0');
      document.getElementById('seconds').textContent = String(seconds).padStart(2,'0');
    }
    updateCountdown(); setInterval(updateCountdown,1000);

    document.getElementById('submitRsvp').addEventListener('click',()=>{
      const name = document.getElementById('rname').value.trim();
      const contact = document.getElementById('remail').value.trim();
      const note = document.getElementById('rnotes').value.trim();
      if(!name){alert('Mohon isi nama.');return}
      const list = JSON.parse(localStorage.getItem('rsvpList')||'[]');
      list.push({name,contact,note,ts:new Date().toISOString()});
      localStorage.setItem('rsvpList',JSON.stringify(list));
      document.getElementById('rsvpMsg').style.display='block';
      setTimeout(()=>document.getElementById('rsvpMsg').style.display='none',4000);
      document.getElementById('rname').value='';document.getElementById('remail').value='';document.getElementById('rnotes').value='';
    });

    document.getElementById('saveNote').addEventListener('click',()=>{
      const note = document.getElementById('noteInput').value.trim();
      if(!note){alert('Tulis pesannya dulu.');return}
      const notes = JSON.parse(localStorage.getItem('guestNotes')||'[]');
      notes.push({note,ts:new Date().toISOString()});
      localStorage.setItem('guestNotes',JSON.stringify(notes));
      document.getElementById('guestNotes').textContent = 'Terima kasih ‚Äî pesanmu tersimpan.';
      document.getElementById('noteInput').value='';
    });

    document.getElementById('openInvite').addEventListener('click',()=>{
      window.scrollTo({top:document.querySelector('.content').offsetTop,behavior:'smooth'});
    });
  </script>
